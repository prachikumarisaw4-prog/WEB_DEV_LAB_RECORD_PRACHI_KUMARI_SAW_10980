<html>
<head>
    <title>JS Condition and Loop</title>
</head>
<body>

<h2>JavaScript Condition and Loop Example</h2>

<script>
    // Conditional Statement
    let a = 10;

    if (a > 5) {
        document.write("a is greater than 5<br>");
    } else {
        document.write("a is less than or equal to 5<br>");
    }

    document.write("<br>");

    // For Loop
    document.write("For Loop:<br>");
    for (let i = 1; i <= 5; i++) {
        document.write(i + "<br>");
    }

    document.write("<br>");

    // While Loop
    document.write("While Loop:<br>");
    let j = 1;
    while (j <= 5) {
        document.write(j + "<br>");
        j++;
    }

    document.write("<br>");

    // Do-While Loop
    document.write("Do While Loop:<br>");
    let k = 1;
    do {
        document.write(k + "<br>");
        k++;
    } while (k <= 5);
</script>

</body>
</html>
